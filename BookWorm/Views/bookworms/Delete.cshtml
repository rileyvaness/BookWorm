@model BookWorm.Models.bookworm

@{
    ViewData["Title"] = "Delete";
}

<a asp-action="Index">
    <i class="fa fa-arrow-circle-o-left" aria-hidden="true" id="backIcon"></i>
    To Book List
</a>
<h3> You are about to delete <i>@Html.DisplayFor(model => model.Title)</i>. Are you sure about this? </h3>
<h4>This action can not be undone.</h4>
<td>

    <form asp-action="Index">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="No, I'll keep it." class="btn btn-info" />

    </form>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Yes, Delete this entry." class="btn btn-danger" />
    </form>

</td>

<hr />
<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Title)
    </dt>
