        @Html.DisplayFor(model => model.Author)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Genre)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Genre)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.QuickSummary)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.QuickSummary)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Thoughts)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Thoughts)
    </dd>
</dl>


