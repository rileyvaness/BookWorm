@model BookWorm.Models.BookGenreViewModel


@{
    ViewData["Title"] = "Index";
   
}
<div class="index-bookworm">
<h1>My Book List</h1>

<p>
    <a asp-action="Create" class="createNew">
        <i class="fa fa-plus-square" aria-hidden="true" id="plusSign"></i>
     New Book!
       
    </a>

</p>
    <h3>Find a Book: </h3>
<form asp-controller="bookworms" asp-action="Index" method="get">

    <p class="input-index">
     
         Book:
        <input type="text" name="SearchString">
        <input type="submit" value="Filter" />
        </p>
    
    <p>
        Genre:
        <select asp-for="BookGenre" asp-items="Model.Genres">

            <option value="">All</option>

        </select>
     </p>
</form>
<table class="table" id="this">
    <thead>
        <tr>
           
            <th>
                @Html.DisplayNameFor(model => model.Books[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Books[0].Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Books[0].Genre)
            </th>
            <!--
            <th>
                @Html.DisplayNameFor(model => model.Books[0].QuickSummary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Books[0].Thoughts)
            </th>
            <th></th>
            -->
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Books)
        {
            <tr>
                <td>
                  
                    @Html.DisplayFor(modelItem => item.Title)


                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <!---
            <td>
                @Html.DisplayFor(modelItem => item.QuickSummary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Thoughts)
            </td>
            -->
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Full Details</a>  |
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>  |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>  
                
            </td>
            </tr>
        }

    </tbody>
</table>
    </div>