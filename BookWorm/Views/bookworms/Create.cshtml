@model BookWorm.Models.bookworm

@{
    ViewData["Title"] = "Create";
}

<h1>Add a new Book!</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" id="create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" required type="text" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author" class="control-label"></label>
                <input asp-for="Author" class="form-control" required type ="text" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genre" class="control-label" ></label>
                <input asp-for="Genre" class="form-control" required type ="text" />
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="QuickSummary" class="control-label"></label>
                <textarea asp-for="QuickSummary" class="form-control"  required type ="text"></textarea>
                <span asp-validation-for="QuickSummary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Thoughts" class="control-label"></label>
                <textarea asp-for="Thoughts" class="form-control" required type ="text"></textarea>
                <span asp-validation-for="Thoughts" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">
        <i class="fa fa-arrow-circle-o-left" aria-hidden="true" id="backIcon"></i>
        To Book List
    </a>
 
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
